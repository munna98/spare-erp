// apps/destop/electron/tsconfig.json
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "outDir": "../dist-electron",
    "declaration": true,
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "composite": true,
    "tsBuildInfoFile": "../dist-electron/tsconfig.tsbuildinfo"
  },
  "include": ["./**/*"]
}